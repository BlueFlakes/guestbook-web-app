<body>
    <header>
        <h1>{{ title }}</h1>
    </header>

    <figure>
        {% for record in guest_statements %}

            <div class="guest-statement">
                <p>{{ record[0] }}</p>

                <div class="name-date">

                    {% for statement in record %}
                    {% if loop.index > 1 %}
                            <p>{{ statement }}</p>
                    {% endif %}

                {% endfor %}
                </div>

            </div>

        {% endfor %}
    </figure>

